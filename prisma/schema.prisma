generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Category {
  FOOD
  TRANSPORT
  SHOPPING
  OTHER
}

model Expense {
  id              String    @id @default(cuid())
  amount          Float
  title           String
  expenseDate     DateTime
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  category        Category?
  budget          Budget?   @relation(fields: [budgetId], references: [id])
  budgetId        String?
  user            User      @relation(fields: [createdByUserId], references: [id])
  createdByUserId String
}

model Budget {
  id              String    @id @default(cuid())
  amount          Float
  title           String
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  expenses        Expense[]
  user            User      @relation(fields: [createdByUserId], references: [id])
  createdByUserId String
}

model User {
  id             String    @id @default(cuid())
  email          String    @unique
  password       String
  firstName      String
  lastName       String
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  profilePicture String?
  Expense        Expense[]
  Budget         Budget[]
}
